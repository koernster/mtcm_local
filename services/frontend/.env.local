# MTCM Frontend — Local Docker Development
# All services running locally via docker-compose

# Auth bypass (no Keycloak)
REACT_APP_AUTH_BYPASS=true

# Keycloak placeholders (not used when AUTH_BYPASS=true)
REACT_APP_KEYCLOAK_API_BASE_URL=http://localhost:8180
REACT_APP_KEYCLOAK_REALM=MTCM-Local
REACT_APP_KEYCLOAK_CLIENT_ID=MTCM-LOCAL
REACT_APP_KEYCLOAK_REDIRECT_URL=https://localhost:3000/
REACT_APP_KEYCLOAK_REFRESH_TOKEN_INTERVAL=6000

# API Endpoints — direct ports, no reverse proxy
REACT_APP_MTCM_DB_API_BASE_URL=http://localhost:8080/v1/graphql
REACT_APP_HUBSPOT_API_URL=http://localhost:8083/api
REACT_APP_HUBSPOT_API_TOKEN=local-dev-token-change-me
REACT_APP_EXCEL_EXTRACTOR_API_URL=http://localhost:8085

# Formatters
REACT_APP_CURRENCY_FORMAT=de-CH
REACT_APP_DATE_FORMAT=dd.MM.yyyy
REACT_APP_PERCENTAGE_FORMAT=0.00
REACT_APP_DEFAULT_LOCALE=de-CH
REACT_APP_DEFAULT_CURRENCY=CHF

# Feature Flags
REACT_APP_MAINTENANCE_MODE=false
REACT_APP_ENV=local
